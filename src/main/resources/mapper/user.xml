<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.applus_bank.repository.interfaces.UserRepository">

    <!--  회원가입 createUser  -->
    <insert id="insert">
        insert into user_tb (username, password, fullname, created_at)
        values (#{username}, #{password}, #{fullname}, now())
    </insert>

    <update id="updateById">
        update user_tb set username = #{username},
                           password = #{password},
                           fullname = #{fullname} where id = #{id}
    </update>

    <delete id="deleteById">
        delete from user_tb where id = #{id}
    </delete>

    <!-- 사용자 정보 조회 -->
    <!-- select 는 resultType 이 있다 ! -->
    <select id="findByUsername" resultType="com.applus_bank.repository.model.User">
        select * from user_tb
        where username = #{username}
    </select>

</mapper>